<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardElevation="10dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

            <ImageView
                android:id="@+id/slikaKorisnik"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_osoba"
                android:layout_weight="0"
                android:layout_marginLeft="8dp"
                />

        <TextView
            android:id="@+id/emailTextView"
            android:text="E-mail adresa"
            android:textSize="12dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editKorisnikDugme"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconGravity="textStart"
            android:padding="0dp"
            app:icon="@drawable/pencil"
            app:iconTint="@color/main_green_dark"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteKorisnikDugme"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:icon="@drawable/delete"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/red"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

    </LinearLayout>
</androidx.cardview.widget.CardView>