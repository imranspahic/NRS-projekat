<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:padding="20dp"
    tools:context=".view.FragmentAdmin" >

      <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/layout"
        android:id="@+id/recyclerLista"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling" />
        <EditText
            android:id="@+id/emailTekst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerLista"
            android:layout_centerHorizontal="true"

            android:hint="E-mail" />
        <EditText
            android:id="@+id/lozinkaTekst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTekst"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Lozinka" />
        <Button
            android:id="@+id/dugmeIzmijeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/lozinkaTekst"
            android:text="Izmijeni" />
    </RelativeLayout>